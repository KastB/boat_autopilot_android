<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_init"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/init" />

            <Button
                android:id="@+id/button_goparking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/goparking" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_reinit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/reinit" />

            <Button
                android:id="@+id/button_unlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/unlock" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/goal"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/label_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/error"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textSize="21dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_wind_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wind_direction"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apparent_wind_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/label_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wind_speed"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/true_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textSize="21dp" />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/heading"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/label_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boat_speed"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/gps_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textSize="21dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/temperature"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/water_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />
            <TextView
                android:id="@+id/label_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/depth"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textSize="21dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_rudder_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rudder_position"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rudder_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/label_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/integral"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textSize="21dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_heel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/heel"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/label_pitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pitch"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/pitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textSize="21dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_trip_milage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trip_milage"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_milage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/blank"
                android:textAlignment="viewStart"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/label_total_milage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_milage"
                android:textAlignment="center"
                android:textSize="21dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/total_milage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textSize="21dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_spacer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boat_speed"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/spacer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/spacer4"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:textSize="22dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/label_spacer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/spacer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/spacer4"
                android:textAlignment="viewEnd"
                android:textSize="22dp"
                android:layout_weight="1"
                android:visibility="invisible" />

        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/stop" />

            <Button
                android:id="@+id/button_compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/compass" />

            <Button
                android:id="@+id/button_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/wind" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/d10" />

            <Button
                android:id="@+id/button_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/d" />

            <Button
                android:id="@+id/button_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/i" />

            <Button
                android:id="@+id/button_i10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/i10" />

        </TableRow>

    </TableLayout>

</LinearLayout>
